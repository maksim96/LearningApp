<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00cc64"
    tools:context=".Task3"
    android:id="@+id/task3_root">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->


    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/earth" />



    <ImageView
        android:id="@+id/squirrel"
        android:layout_width="132dp"
        android:layout_height="168dp"
        android:layout_alignBottom="@+id/line2"
        android:layout_alignStart="@+id/plate2"
        android:layout_marginBottom="-65dp"
        android:layout_marginStart="-53dp"
        android:src="@drawable/squirrel" />

    <ImageView
        android:id="@+id/bunny"
        android:layout_width="185dp"
        android:layout_height="193dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/sign"
        android:src="@drawable/bunny"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/bear"
        android:layout_width="151dp"
        android:layout_height="224dp"
        android:layout_alignBottom="@+id/plate5"
        android:layout_alignParentStart="true"
        android:layout_marginStart="19dp"
        android:src="@drawable/bear"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/table"
        android:layout_width="592dp"
        android:layout_height="587dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="129dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/table" />

    <ImageView
        android:id="@+id/sign"
        android:layout_width="438dp"
        android:layout_height="291dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="33dp"
        android:layout_marginEnd="28dp"
        android:src="@drawable/sign" />

    <ImageView
        android:id="@+id/board"
        android:layout_width="340dp"
        android:layout_height="358dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="48dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/board" />


    <RelativeLayout
        android:id="@+id/plate1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="238dp"
        android:layout_marginStart="108dp">

        <ImageView
            android:id="@+id/_plate1"
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:rotation="72"
            android:src="@drawable/plate" />

        <ImageView
            android:id="@+id/food1"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:src="@drawable/nuts" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/plate2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="158dp"
        android:layout_marginTop="85dp">

        <ImageView
            android:id="@+id/_plate2"
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:rotation="144"
            android:src="@drawable/plate" />

        <ImageView
            android:id="@+id/food2"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:src="@drawable/nuts" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/plate3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="449dp"
        android:layout_marginTop="54dp">

        <ImageView
            android:id="@+id/_plate3"
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:rotation="216"
            android:src="@drawable/plate" />

        <ImageView
            android:id="@+id/food3"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:src="@drawable/nuts" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/plate4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="248dp"
        android:layout_marginStart="510dp">

        <ImageView
            android:id="@+id/_plate4"
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:rotation="288"
            android:src="@drawable/plate" />

        <ImageView
            android:id="@+id/food4"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:src="@drawable/nuts" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/plate5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="158dp"
        android:layout_marginStart="338dp">

        <ImageView
            android:id="@+id/_plate5"
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/plate" />

        <ImageView
            android:id="@+id/food5"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:src="@drawable/nuts" />

    </RelativeLayout>

    <!--Dummy component to take focus away-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"/>

    <EditText
        android:id="@+id/editTextRight"
        android:layout_width="80dp"
        android:layout_height="78dp"
        android:layout_alignTop="@id/editTextLeft"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="227dp"
        android:background="#50ffffff"
        android:ems="10"
        android:gravity="center"
        android:inputType="numberPassword"
        android:textSize="72sp"
        android:nextFocusRight="@+id/editTextProduct"/>

    <EditText
        android:id="@+id/editTextProduct"
        android:layout_width="122dp"
        android:layout_height="78dp"
        android:layout_alignTop="@id/editTextLeft"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="62dp"
        android:background="#50ffffff"
        android:ems="10"
        android:gravity="center"
        android:inputType="numberPassword"
        android:textSize="72sp" />

    <EditText
        android:id="@+id/editTextLeft"
        android:layout_width="80dp"
        android:layout_height="78dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="191dp"
        android:layout_marginEnd="346dp"
        android:background="#50ffffff"
        android:ems="10"
        android:gravity="center"
        android:inputType="numberPassword"
        android:nextFocusRight="@+id/editTextRight"
        android:textSize="72sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView5"
        android:layout_marginEnd="196dp"
        android:text="="
        android:textSize="36sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="206dp"
        android:layout_marginEnd="321dp"
        android:text="·"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/line3"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/line1"
        android:layout_below="@id/line2"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/finger_paint"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/line1"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="118dp"
        android:layout_marginTop="77dp"
        android:fontFamily="@font/finger_paint"
        android:typeface="monospace"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/line2"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/line1"
        android:layout_marginTop="10dp"
        android:layout_below="@id/line1"
        android:fontFamily="@font/finger_paint"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/line6"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/line1"
        android:layout_below="@+id/line5"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/finger_paint"
        android:typeface="monospace"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/line5"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/line1"
        android:layout_marginTop="10dp"
        android:layout_below="@id/line4"
        android:fontFamily="@font/finger_paint"
        android:typeface="monospace"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/line4"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/line1"
        android:layout_marginTop="10dp"
        android:layout_below="@id/line3"
        android:fontFamily="@font/finger_paint"
        android:textSize="20sp"/>

    <research.educational.thiessen.learningappmock.helpers.SpeechBubble
        android:id="@+id/bearBubble"
        android:layout_width="680dp"
        android:layout_height="205dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/plate3"
        android:layout_marginStart="90dp"
        android:scaleType="fitXY"
        android:text="Ich habe auch meine Honigwaben mitgebracht!"
        android:visibility="invisible" />

    <research.educational.thiessen.learningappmock.helpers.SpeechBubble
        android:id="@+id/bunnyBubble"
        android:layout_width="419dp"
        android:layout_height="173dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="93dp"
        android:layout_toEndOf="@+id/plate1"
        android:scaleX="-1"
        android:scaleY="-1"
        android:src="@drawable/sprechblase_left"
        android:text="Ich habe ganz viele Möhren gesammelt!"
        android:visibility="invisible" />


    <research.educational.thiessen.learningappmock.helpers.SpeechBubble
        android:id="@+id/squirrelBubble"
        android:layout_width="419dp"
        android:layout_height="173dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="181dp"
        android:layout_marginTop="175dp"
        android:gravity="center"
        android:scaleY="-1"
        android:text="Jetzt, wo wir so viel gesammelt haben, können wir ein Fest feiern!"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/leftImage"
        android:layout_width="55dp"
        android:layout_height="59dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/editTextRight"
        android:layout_marginEnd="357dp"
        android:scaleType="centerCrop"
        android:src="@drawable/plate"
        android:alpha="0.6"/>

    <ImageView
        android:id="@+id/rightImage"
        android:layout_width="55dp"
        android:layout_height="59dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/editTextRight"
        android:layout_marginEnd="237dp"
        android:scaleType="fitXY"
        android:src="@drawable/nuts"
        android:alpha="0.7"/>


</RelativeLayout>