<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00cc64"
    tools:context=".Task2"
    android:id="@+id/task2_root"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->


    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/forest" />


    <ImageView
        android:id="@+id/squirrel"
        android:layout_width="164dp"
        android:layout_height="216dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="65dp"
        android:layout_marginStart="169dp"
        android:scaleType="fitXY"
        android:src="@drawable/squirrel" />

    <ImageView
        android:id="@+id/bag"
        android:layout_width="337dp"
        android:layout_height="519dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="13dp"
        android:layout_marginEnd="417dp"
        android:src="@drawable/bag2" />

    <ImageView
        android:id="@+id/honey1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150dp"
        android:layout_toEndOf="@+id/bunny"
        android:alpha="0.6"
        android:src="@drawable/honey"
        android:visibility="invisible" />


    <ImageView
        android:id="@+id/honey8"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/honey1"
        android:layout_marginTop="-150dp"
        android:layout_toStartOf="@+id/honey3"
        android:alpha="0.6"
        android:src="@drawable/honey"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/honey7"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_above="@+id/honey1"
        android:layout_toEndOf="@+id/honey2"
        android:alpha="0.6"
        android:src="@drawable/honey"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/honey4"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_above="@+id/honey2"
        android:layout_toEndOf="@+id/honey1"
        android:alpha="0.6"
        android:src="@drawable/honey"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/honey5"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/honey1"
        android:layout_marginStart="-499dp"
        android:layout_toEndOf="@+id/honey3"
        android:alpha="0.6"
        android:src="@drawable/honey"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/honey3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="118dp"
        android:layout_marginEnd="499dp"
        android:alpha="0.6"
        android:src="@drawable/honey"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/honey2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_above="@+id/honey3"
        android:layout_toEndOf="@+id/honey1"
        android:alpha="0.6"
        android:src="@drawable/honey"
        android:visibility="invisible" />


    <ImageView
        android:id="@+id/honey6"
        android:layout_width="70dp"
        android:layout_height="70dp"

        android:layout_above="@+id/honey1"
        android:layout_alignStart="@+id/honey1"
        android:alpha="0.6"
        android:src="@drawable/honey"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/bear"
        android:layout_width="230dp"
        android:layout_height="300dp"
        android:layout_alignBottom="@+id/honey8"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="79dp"
        android:src="@drawable/bear" />

    <research.educational.thiessen.learningappmock.helpers.SpeechBubble
        android:id="@+id/bubbleBear"
        android:layout_width="372dp"
        android:layout_height="296dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-42dp"
        android:layout_marginTop="113dp"
        android:layout_toEndOf="@+id/honey8"
        android:scaleType="fitXY"
        android:scaleX="-1"
        android:text="Hallo, ich bin Bertha der Bär. Ich esse am liebsten Honigwaben."
        android:visibility="invisible" />

    <research.educational.thiessen.learningappmock.helpers.ThoughtBubble
        android:id="@+id/thoughtBubbleBear"
        android:layout_width="330dp"
        android:layout_height="264dp"
        android:layout_above="@+id/honey4"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="214dp"
        android:scaleType="fitXY"
        android:src="@drawable/honey"
        android:visibility="invisible" />





    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sign">
        <ImageView

            android:layout_width="513dp"
            android:layout_height="350dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="26dp"
            android:layout_marginTop="166dp"
            android:src="@drawable/sign" />
        <EditText
            android:id="@+id/honeyEdit"
            android:layout_width="199dp"
            android:layout_height="184dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="193dp"
            android:layout_marginTop="207dp"
            android:background="#80FFFFFF"
            android:ems="10"
            android:maxLength="4"
            android:inputType="numberPassword"
            android:textAlignment="center"
            android:textSize="72dp" />

    </RelativeLayout>


    <ImageView
        android:id="@+id/bunny"
        android:layout_width="170dp"
        android:layout_height="324dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="37dp"
        android:layout_marginStart="412dp"
        android:src="@drawable/bunny"
        android:visibility="invisible" />

    <research.educational.thiessen.learningappmock.helpers.SpeechBubble
        android:id="@+id/bunnyBubble"
        android:layout_width="398dp"
        android:layout_height="324dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="387dp"
        android:layout_marginTop="112dp"
        android:text="Ich habe 2 x 4 Möhren gesammelt. Wie viele sind im Beutel?"
        android:visibility="invisible" />

    <research.educational.thiessen.learningappmock.helpers.ThoughtBubble
        android:id="@+id/thoughtBubbleBunny"
        android:layout_width="398dp"
        android:layout_height="324dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="351dp"
        android:layout_marginTop="154dp"
        android:scaleX="-1"
        android:src="@drawable/carrots"
        android:visibility="invisible" />

    <research.educational.thiessen.learningappmock.helpers.SpeechBubble
        android:id="@+id/bubbleSquirrel"
        android:layout_width="330dp"
        android:layout_height="264dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="263dp"
        android:text="Schau mal wen ich im Wald getroffen habe!" />


</RelativeLayout>